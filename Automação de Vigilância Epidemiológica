    'Hospital Universitário Pio XII':{'Diabetes Mellitus Tipo 2':3998, 'Hipertensão Arterial Sistêmica':4106, 'Depressão Maior':5228, 'Colite Ulcerativa':431, 'Doença de Crohn':389, 'Transtorno Bipolar':732, 'Doença Renal Crônica':1654, 'AVC Hemorrágico':413, 'Miastenia Gravis':78, 'Endometriose':954},
    'Hospital Nossa Senhora das Vitórias':{'Diabetes Mellitus Tipo 2':7603, 'Hipertensão Arterial Sistêmica': 6200, 'Depressão Maior':3600, 'Câncer de Próstata':873, 'Insuficiência Cardíaca':1104, 'Transtorno de Ansiedade Generelizada':1955, 'Hepatite B':204, 'Glaucoma':722, 'Eczema Atópico':688, 'Doença Celíaca':217},
    'Hospital São Martinho':{'Diabetes Mellitus Tipo 2':4888, 'Hipertensão Arterial Sistêmica':5432, 'Depressão Maior':3100, 'Obesidade Mórbida':2540, 'Transtorno de Personalidade Borderline':273, 'Câncer de Pulmão':621, 'Doença Arterial Coronariana':1789, 'Úlcera Gástrica':399}
