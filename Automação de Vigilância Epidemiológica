for hospital in dados:
    for doenca in dados[hospital]:
        if dados[hospital].get(doenca) > 2000 and not 'Hospital' in hospital:
            print('A região do hospital {} parece estar passando por epidemias locais de:\n' \
            '{}, com {} casos\n'.format(hospital, doenca, dados[hospital].get(doenca)))
        elif dados[hospital].get(doenca) > 2000 and 'Hospital' in hospital:
            print('A região do {} parece estar passando por epidemias locais de:\n' \
            '{}, com {} casos\n'.format(hospital, doenca, dados[hospital].get(doenca)))
